{
  "name": "api_tsc_mongodb",
  "version": "1.0.0",
  "main": "index.js",
  "author": "Alex Campos",
  "license": "MIT",
  "scripts": {
    "start": "node dist/index.js",
    "build": "tsc",
    "postinstall": "npm run build",
    "dev": "ts-node-dev index.ts",
    "test": "npx cypress open",
    "test-cy": "npx cypress run --reporter mochawesome",
    "test-merge": "mochawesome-merge cypress/report/mochawesome-report/*.json > cypress/report/output.json",
    "test-html": "marge cypress/report/output.json --reportDir ./ --inline",
    "delete_reports": "node deleteReports.js",
    "tests": "npm run delete_reports && npm run test-cy && npm run test-merge && npm run test-html"
  },
  "keywords": [
    "node",
    "nodejs",
    "typescript",
    "mongodb",
    "api"
  ],
  "dependencies": {
    "body-parser": "^1.20.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.0",
    "express": "^4.18.1",
    "mongoose": "^6.3.2",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/morgan": "^1.9.3",
    "cypress": "^9.7.0",
    "mochawesome": "^7.1.3",
    "mochawesome-merge": "^4.2.1",
    "nodemon": "^2.0.16",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.6.4"
  }
}
